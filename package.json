  "build": {
    "appId": "com.hasan.examportal",
    "productName": "Hasan Here Exam Portal",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main/**",
      "renderer/**",
      "node_modules/**",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/**"
    ],
    "win": {
      "icon": "renderer/public/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "renderer/public/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "renderer/public/icon.png",
      "target": "AppImage"
    }
